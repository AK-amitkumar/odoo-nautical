<!-- nautical.role_book -->
<!-- nautical.role_book -->
<!-- nautical.role_book -->
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_nautical_role_book_filter" model="ir.ui.view">
            <field name="name">nautical.role_book.select</field>
            <field name="model">nautical.role_book</field>
            <field name="arch" type="xml">
                <search string="role_book" version="7.0">
                    <group string="By Attribute">
                    <field name="estimated_dep_date" string="Estimated Departure Date"
                            />
                    <field name="partner_id" string="Partner"
                            />
                    <field name="destiny" string="Destiny"
                            />
                    <field name="crew_qty" string="Crew"
                            />
                    <field name="est_arrival_date" string="Estimated Arrival Date"
                            />
                    </group>
                    <group string="By object">
                    <field name="craft_id" string="Craft"
                            />
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_nautical_role_book_form" model="ir.ui.view">
            <field name="name">nautical.role_book.form</field>
            <field name="model">nautical.role_book</field>
            <field name="arch" type="xml">
                <form string="role_book" version="7.0">
                    <header>
                    </header>
                    <sheet string="role_book">
                     <group>
                        <field name="estimated_dep_date"
                            />
                        <field name="partner_id"
                            />
                        <field name="destiny"
                            />
                        <field name="crew_qty"
                            />
                        <field name="est_arrival_date"
                            />
                    <field name="craft_id"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_nautical_role_book_tree" model="ir.ui.view">
            <field name="name">nautical.role_book.tree</field>
            <field name="model">nautical.role_book</field>
            <field name="arch" type="xml">
                <tree string="role_book"
                    >
                    <field name="estimated_dep_date"
                        />
                    <field name="partner_id"
                        />
                    <field name="destiny"
                        />
                    <field name="crew_qty"
                        />
                    <field name="est_arrival_date"
                        />
                    <field name="craft_id"
                        />
                </tree>
            </field>
        </record>

    </data>
</openerp>
