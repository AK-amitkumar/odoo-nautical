<?xml version="1.0"?>
<openerp>
    <data>

        <record id="view_nautical_craft_tree_portal" model="ir.ui.view">
            <field name="name">nautical_portal.craft.tree.portal</field>
            <field name="model">nautical.craft</field>
            <field name="arch" type="xml">
            <tree string="Craft Portal">  

                    <field name="ref"/>
                    <field name="product_id"/>
                    <field name="plate"/>
                    <field name="name"/>
                    <field name="last_action_date"/>
                    <field name="state"/>
                    <button type="object" icon="gtk-index" string="Reserve" class="oe_highlight"  help="Reserve" name="action_reserve" context="{'readonly':True}"/>
            
                </tree>
            </field>
        </record>


    </data>
</openerp>

